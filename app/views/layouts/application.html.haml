!!! 5
%html
%head
  %title SageTap
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag
%body
  #header
    - if user_signed_in?
      = link_to 'Sign out', destroy_user_session_path
    - else
      = link_to 'Sign in', new_user_session_path

  #root
    %h1
      <span class='title-a'>Sage</span><span class='title-b'>Tap</span>

    %p{ :class => "notice" }
      = notice
    %p{ :class => "alert" }
      = alert

    = yield
