!!! 5
%html
%head
  %title SageTap
  = stylesheet_link_tag :all
  = csrf_meta_tag
%body
  #header
    - if user_signed_in?
      = link_to 'Sign out', destroy_user_session_path
    - else
      = link_to 'Sign in', new_user_session_path
      or
      = link_to 'Sign in via twitter', root_path(:warden_oauth_provider => 'twitter')

  #root
    %h1
      <span class='title-a'>Sage</span><span class='title-b'>Tap</span>

    %p{ :class => "notice" }
      = notice
    %p{ :class => "alert" }
      = alert

    = yield

  = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js',
      'rails.js',
      'application'
